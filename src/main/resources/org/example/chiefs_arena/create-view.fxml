<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.CreerConcoursController">
    <VBox spacing="20.0" layoutX="50.0" layoutY="20.0" prefWidth="400.0">
        <Label text="Créer un concours" style="-fx-font-size: 24px;" />

        <TextField fx:id="nomField" promptText="Nom" />
        <TextArea fx:id="descriptionField" promptText="Description" prefRowCount="3" />

        <ComboBox fx:id="categorieComboBox" promptText="Catégorie">
            <!-- Ajoutez des éléments ici si nécessaire -->
        </ComboBox>

        <HBox spacing="10">
            <ComboBox fx:id="lieuComboBox" promptText="Autour de vous" />
            <TextField fx:id="lieuSearchField" promptText="Rechercher" />
        </HBox>
        <!-- Vous pouvez ajouter une image ou une carte ici -->
        <ImageView fx:id="mapImageView" fitWidth="400" fitHeight="200"/>

        <Button text="Ajouter cuisinier" onAction="#handleAjouterCuisinier" />
        <Button text="Ajouter jury" onAction="#handleAjouterJury" />
        <Button text="Ajouter sponsor" onAction="#handleAjouterSponsor" />
    </VBox>
</AnchorPane>
